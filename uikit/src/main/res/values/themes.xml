<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Akelius" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Bottom sheet theme. -->
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/colorPrimary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorSecondaryVariant">@color/colorAccent</item>
        <item name="colorOnSecondary">@color/colorAccent</item>
        <!-- Background color. -->
        <item name="android:colorBackground">@color/colorPrimaryDark</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/colorPrimaryDark</item>
        <item name="android:navigationBarColor" tools:targetApi="l">@color/colorPrimaryDark</item>
        <!-- Default font. -->
        <item name="fontFamily">@font/scancardium</item>
        <!-- Customize your theme here. -->
        <item name="colorTextPrimary">@color/black_000000</item>
        <item name="colorTextPrimaryLight">@color/gray_818A9B</item>
        <item name="colorTextPrimaryHighLight">@color/gray_A4B1C2</item>
        <item name="colorTextSecondary">@color/white_FFFFFF</item>
        <item name="colorDivider">@color/gray_EEF2F5</item>
        <item name="colorRipple">@color/grayDark</item>
        <item name="colorRippleSecondary">@color/white_FFFFFF</item>
        <item name="colorSurface">@color/gray_EEF2F5</item>
        <item name="colorGreen">@color/green_00DAA2</item>
        <item name="colorRed">@color/red_E64274</item>
        <item name="android:textViewStyle">@style/TextView.Medium</item>
        <item name="android:lineSpacingExtra">6dp</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="BottomSheetDialogFragmentTheme" parent="Theme.MaterialComponents.DayNight.BottomSheetDialog">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_3861FB</item>
        <item name="colorPrimaryVariant">@color/white_FFFFFF</item>
        <item name="colorOnPrimary">@color/white_FFFFFF</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_3861FB</item>
        <item name="colorSecondaryVariant">@color/white_FFFFFF</item>
        <item name="colorOnSecondary">@color/white_FFFFFF</item>
        <!-- Background color. -->
        <item name="android:colorBackground">@color/white_FFFFFF</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <!-- Default font. -->
        <item name="fontFamily">@font/scancardium</item>
        <!-- Customize your theme here. -->
        <item name="colorTextPrimary">@color/black_000000</item>
        <item name="colorTextPrimaryLight">@color/gray_818A9B</item>
        <item name="colorTextPrimaryHighLight">@color/gray_A4B1C2</item>
        <item name="colorTextSecondary">@color/white_FFFFFF</item>
        <item name="colorDivider">@color/gray_EEF2F5</item>
        <item name="colorRipple">@color/blue_3861FB</item>
        <item name="colorRippleSecondary">@color/white_FFFFFF</item>
        <item name="colorSurface">@color/gray_EEF2F5</item>
        <item name="colorGreen">@color/green_00DAA2</item>
        <item name="colorRed">@color/red_E64274</item>
        <!-- Others. -->
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize|adjustNothing</item>
    </style>
</resources>
